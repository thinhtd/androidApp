            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/but_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/but_e"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
